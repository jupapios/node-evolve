.home
	padding-left width-1-col
	//padding-left 8%
	width width-8-col
	section
		margin-bottom padding-block * 2
		*zoom 1

		&:before
		&:after
			content ""
			display table

		&:after
			clear both

		&.images
			.img
				padding-right padding-block * 2
				canvas
					border 5px solid color-gray
					border-radius 16px
				h2
					text-align center

			.stats
				span
					display block
					margin-bottom padding-block * 2

					&:last-child
						margin-bottom 0

		&.mutations
			position relative
			.input-url
				background-color transparent
				border 0
				border-bottom 1px solid color-gray-light
				outline 0
				width width-2-col + padding-block * 2
 
				&:active
				&:focus
					border-bottom 1px solid color-gray
			.url
				bottom 0
				position absolute
				right 0

		&.controls
			.buttons
				margin-top padding-block
			.textarea
				border 2px solid color-gray
				border-radius 14px
				box-sizing border-box
				height 160px
				outline none
				padding 8px
				width width-4-col - padding-block * 2

				&:active
				&:focus
					border 2px solid color-gray-light

	.icos
		& > div.ico
			display inline-block
		.ico-text
			font-size 0.8em
		.ico
			text-align center
			width width-1-col - padding-block
			figure
				cursor pointer
				height 50px
				margin-left auto
				margin-right auto
				transition all 300ms linear
				width @height

				&:hover
					transform rotate(60deg) scale(1.1)
			#btn-gauss
				background url('../img/icos/gauss.png') no-repeat
			#btn-soft
				background url('../img/icos/soft.png') no-repeat
			#btn-medium
				background url('../img/icos/medium.png') no-repeat
			#btn-hard
				background url('../img/icos/hard.png') no-repeat

			.active
				opacity 0.2
		&.colors
			.ico
				figure
					height 43px
					width @height

				#btn-color-black
					background url('../img/icos/color-black.png') no-repeat
				#btn-color-white
					background url('../img/icos/color-white.png') no-repeat
				#btn-color-blue
					background url('../img/icos/color-blue.png') no-repeat
		&.counters
			margin-left 12px
			margin-top 1.2em
			.ico
				margin-right 20px
			.ico-count
				margin-left auto
				margin-right auto
				width padding-block * 3 + 6px
				& > div
					cursor pointer
					height 25px
					float left
					margin-left 10px
					width @height

					&:first-child
						margin-left 2px

				#btn-poly-more
				#btn-vert-more
					background url('../img/icos/ico-more.png') no-repeat
				#btn-poly-less
				#btn-vert-less
					background url('../img/icos/ico-less.png') no-repeat
