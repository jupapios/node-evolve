// Floats
.left
	float left
.right
	float right

// Text
h2
h3
	color color-gray
	font-family 'AstuteSSiRegular'
	font-weight normal
h2
	font-size 1.4em
	margin 0.3em 0

h3
	font-size 1.1em
	margin-top 0

span
	color color-gray-light
	font-family 'AstuteSSiLight'
	font-size 1.1em

// Buttons
.btn
	border 2px solid color-gray
	border-radius 16px
	color color-gray-light
	cursor pointer
	font-family 'AstuteSSiLight'	
	display inline
	font-size 0.95em
	margin 0 8px
	padding 3px 9px
	transition all 250ms linear

	&:hover
		opacity 0.5