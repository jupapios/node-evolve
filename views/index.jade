header
div(role='main')
	div.image
		| Original
		br
		canvas#canvas_input

	div.image
		Best
		br
		canvas#canvas_best

	div.image
		| Evolving
		br
		canvas#canvas_test

	div#fitwrap
		span#fitness ?
		| Fitness
		br

		span#step_benefit 0
		| Improvements
		br

		span#step_total 0
		| Mutations
		br

		div#start(onclick='start()') Start
		div#stop(onclick='stop()') Stop

		div#stats
			span#time 0 Elapsed time
			br
			span#mutsec ? Mutations per second
			br

	br.clr

	div#imgform
		form
			div.button#b_setimage(onclick='set_image()') Set new image URL
			input#imgurl
		small(style="color:#555;") Image should be small (~200x200 pixels), otherwise fitness computation is very slow.
			p Examples:
			a(onclick="set_example_image(this); return false;", href="img/mona_lisa_crop.jpg") Mona Lisa
			a(onclick="set_example_image(this); return false;", href="img/darwin_crop.jpg") Darwin
			a(onclick="set_example_image(this); return false;", href="img/velociraptor2_crop.jpg") Velociraptor
			a(onclick="set_example_image(this); return false;", href="img/koza_crop.jpg") John Koza

	br.clr

	div#dnaformwrap
		form(name="dnaform")
			div.button#b_export_dna(onclick="export_dna()") Export DNA
			div.button#b_export_svg(onclick="export_dna_as_svg()") Export SVG
			div.button#b_import_dna(onclick="import_dna()") Import DNA
			a(href="#export_note")[help]
			br
			textarea(name="clipboard")#clipboard(onClick="select_all();")

	div#parameters
		div#mutationtype
			div.parname Mutation
			div.button#b_mut_gauss(onclick="setMutation('gauss')") Gaussian
			div.button#b_mut_soft(onclick="setMutation('soft')") Soft
			div.button#b_mut_med(onclick="setMutation('medium')") Medium
			div.button#b_mut_hard(onclick="setMutation('hard')") Hard

		div#resetdna
			div.parname Initialize DNA
			div.button#b_dna_random(onclick="setDnaRandom()") Color
			div.button#b_dna_white(onclick="setDnaColor(254,254,254)") White
			div.button#b_dna_black(onclick="setDnaColor(0,0,0)") Black

		div#geometry
			div.button(onclick="removePolygon()") -
			div.button(onclick="addPolygon()") +
			span.parname.pargeo
				span#polygons 50 Polygons
			br
			div.button(onclick="removeVertex()") -
			div.button(onclick="addVertex()") +
			span.parname.pargeo
				span#vertices 6 Vertices

	br.clr
footer